<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="#88B9E1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bioLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:paddingStart="8dp"
        android:text="My Bio"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/myName"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:gravity="center"

        android:text="Hazem Ewidat" />

    <ImageView
        android:id="@+id/myImage"
        style="@style/myImage"
        android:layout_width="169dp"
        android:layout_height="137dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/hazem" />

    <EditText
        android:id="@+id/myHobbeis"
        android:layout_width="318dp"
        android:layout_height="69dp"
        android:ems="10"
        android:gravity="center"
        android:hint="My hobbies"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:visibility="visible" />

    <Button
        android:id="@+id/add"
        style="@style/buttonAdd"
        android:layout_width="226dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#5210C6"
        android:text="Add" />

    <TextView
        android:id="@+id/myHobbiesText"
        android:layout_width="332dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/viewBio"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_margin="30dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="@string/Bio"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />


</LinearLayout>